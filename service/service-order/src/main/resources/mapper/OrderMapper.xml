<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuanhe.gmall.order.mapper.OrderMapper">
    <insert id="saveOrderInfo" keyProperty="id" useGeneratedKeys="true">
        insert into order_info ()
    </insert>
    <insert id="saveOrderDetailList">
        insert into order_detail (order_id,sku_id,sku_name,img_url,order_price,sku_num)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.orderId},#{item.skuId},#{item.skuName},#{item.imgUrl},#{item.orderPrice},#{item.skuNum})
        </foreach>
    </insert>
</mapper>